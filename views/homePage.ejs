<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard</title>

    <!-- Google Font: CARDO -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cardo:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />

    <!-- Main CSS -->
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body class="cardo-regular">
    <div class="page">
      <div class="beige_box">

        <!-- Heading -->
        <h1 class="cardo-bold">Welcome ðŸ‘‹</h1>
        <h3 class="cardo-regular">Your Todo List</h3>

        <div class="tasks">

          <!-- Add Todo -->
          <div class="addtask">
            <form method="POST" action="/addTodo">
              <input
                type="text"
                name="todos"
                placeholder="Enter task"
                required
              />
              <button type="submit">Add</button>
            </form>
          </div>

          <!-- Todo List -->
          <div class="addToPage">
            <% if (work && work.tasks.length > 0) { %>
              <ul>
                <% for (let todo of work.tasks) { %>
                  <li>

                    <!-- Toggle Todo -->
                    <form
                      method="POST"
                      action="/toggleTodo"
                      style="display:inline"
                    >
                      <input
                        type="hidden"
                        name="taskId"
                        value="<%= todo._id %>"
                      />

                      <input
                        type="checkbox"
                        onchange="this.form.submit()"
                        <%= todo.isCompleted ? "checked" : "" %>
                      />

                      <span class="<%= todo.isCompleted ? 'completed' : '' %>">
                        <%= todo.title %>
                      </span>
                    </form>

                  </li>
                <% } %>
              </ul>
            <% } else { %>
              <p>No tasks added for today</p>
            <% } %>
          </div>

        </div>
      </div>
    </div>
  </body>
</html>
